<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter xmlns="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
  <!-- https://spotbugs.readthedocs.io/en/stable/filter.html -->

  <Match>
    <Or>
      <Bug pattern="EI_EXPOSE_REP"/>
      <Bug pattern="EI_EXPOSE_REP2"/>
      <Bug pattern="EI_EXPOSE_STATIC_REP2"/>
      <Bug pattern="MS_CANNOT_BE_FINAL"/>
      <Bug pattern="MS_EXPOSE_REP"/>
      <Bug pattern="MS_PKGPROTECT"/>
    </Or>
  </Match>
  
  <Match>
    <!-- Seralization is irrelevant for this project -->
    <Bug pattern="SE_BAD_FIELD"/>
    <Or>
      <Class name="dev.ssalhub.lskv.config.PanelType"/>
      <Class name="dev.ssalhub.lskv.panels.AvgPanel"/>
      <Class name="dev.ssalhub.lskv.panels.LineGraphPanel"/>
      <Class name="dev.ssalhub.lskv.panels.CursorGraphPanel"/>
      <Class name="dev.ssalhub.lskv.panels.KeyPanel"/>
      <Class name="dev.ssalhub.lskv.panels.LastPanel"/>
      <Class name="dev.ssalhub.lskv.ui.component.ColorPicker"/>
      <Class name="dev.ssalhub.lskv.ui.dialog.KeysDialog"/>
      <Class name="dev.ssalhub.lskv.ui.dialog.MainDialog"/>
      <Class name="dev.ssalhub.lskv.ui.model.DynamicInteger"/>
      <Class name="dev.ssalhub.lskv.ui.model.SpecialNumberModel"/>
    </Or>
  </Match>
  
  <Match>
    <!-- We assume Graphics2D to be used -->
    <Bug pattern="BC_UNCONFIRMED_CAST"/>
    <Or>
      <Method name="paintMenuItem"/>
      <Method name="paintComponent"/>
    </Or>
    <Or>
      <Class name="dev.ssalhub.lskv.Menu$MenuItemUI"/>
      <Class name="dev.ssalhub.lskv.Menu$MenuUI"/>
      <Class name="dev.ssalhub.lskv.layout.GridPanel"/>
      <Class name="dev.ssalhub.lskv.panels.BasePanel"/>
      <Class name="dev.ssalhub.lskv.panels.GraphPanel"/>
    </Or>
  </Match>
  
  <Match>
    <!-- This is not a real bug since JNativeHook holds a reference to this logger -->
    <Bug pattern="LG_LOST_LOGGER_DUE_TO_WEAK_REFERENCE"/>
    <Class name="dev.ssalhub.lskv.event.source.NativeHookInputSource"/>
  </Match>
  
  <Match>
    <!-- By assumption this is fine, if not I have much larger issues -->
    <Bug pattern="BC_UNCONFIRMED_CAST"/>
    <Method name="add"/>
    <Class name="dev.ssalhub.lskv.layout.Layout"/>
  </Match>
  
  <Match>
    <!-- This is fine -->
    <Bug pattern="MC_OVERRIDABLE_METHOD_CALL_IN_CONSTRUCTOR"/>
    <Or>
      <Class name="dev.ssalhub.lskv.ui.component.ColorPicker"/>
      <Class name="dev.ssalhub.lskv.ui.model.SpecialNumberModelEditor"/>
      <Class name="dev.ssalhub.lskv.panels.DataPanel"/>
    </Or>
  </Match>
  
  <Match>
    <!-- This exit is intentional -->
    <Bug pattern="DM_EXIT"/>
    <Class name="dev.ssalhub.lskv.ui.dialog.MainDialog"/>
  </Match>
  
  <Match>
    <!-- Technical debt -->
    <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD"/>
    <Or>
      <Method name="keyPressed"/>
      <Method name="onKeyPress"/>
      <Method name="onKeyRelease"/>
    </Or>
    <Or>
      <Class name="dev.ssalhub.lskv.CommandKeys"/>
      <Class name="dev.ssalhub.lskv.Key"/>
    </Or>
  </Match>
  
  <Match>
    <!-- Technical debt -->
    <Bug pattern="MS_MUTABLE_COLLECTION_PKGPROTECT"/>
    <Or>
      <Field name="graphs"/>
      <Field name="keys"/>
    </Or>
    <Class name="dev.ssalhub.lskv.Main"/>
  </Match>

</FindBugsFilter>
